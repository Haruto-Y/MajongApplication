<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KirokuActivity">

    <TextView
        android:id="@+id/kirokuseyoText"
        android:layout_width="405sp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/aoyagireisyosimo_ttf_2_01"
        android:gravity="center_horizontal|center_vertical"
        android:text="記録せよ！"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/transKirokuButton2"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#9C2D2D"
        android:fontFamily="@font/aoyagireisyosimo_ttf_2_01"
        android:text="閲覧"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/transHomeButton2"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#3B8A3F"
        android:fontFamily="@font/aoyagireisyosimo_ttf_2_01"
        android:text="戻る"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="275dp"
        android:layout_height="53dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:fontFamily="@font/aoyagireisyosimo_ttf_2_01"
        android:inputType="number"
        android:text="Score"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/kakuteiButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:fontFamily="@font/aoyagireisyosimo_ttf_2_01"
        android:inputType="date"
        android:text="Date"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/kakuteiButton"
        app:layout_constraintEnd_toStartOf="@+id/editText1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/kakuteiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#1F8EE6"
        android:fontFamily="@font/aoyagireisyosimo_ttf_2_01"
        android:text="確定"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/transKirokuButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>